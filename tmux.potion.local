#!/bin/zsh

POTION_SESSION="potion"
# Create dotfiles session
tmux new-session -s ${POTION_SESSION} -n vim -d

# Vim (1)
tmux send-keys -t ${POTION_SESSION} "cd ~/ultimatetimmah/potion && vim" C-m

# Git (2)
tmux new-window -n git -c ~/ultimatetimmah/potion -t ${POTION_SESSION}
tmux send-keys -t ${POTION_SESSION}:2 'git status' C-m

# Set default window
tmux select-window -t ${POTION_SESSION}:1
